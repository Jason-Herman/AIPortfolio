<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dip">

    <TextView
        android:id="@+id/display_customer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="TextView"
        android:layout_alignTop="@+id/display_customer_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/display_customer_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="TextView"
        android:layout_alignTop="@+id/display_customer_address"
        android:layout_toStartOf="@+id/display_customer_address" />

    <TextView
        android:id="@+id/display_customer_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/display_customer_id" />

    <TextView
        android:id="@+id/display_customer_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>